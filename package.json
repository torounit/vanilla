{
  "name": "@torounit/vanilla",
  "version": "2.0.2",
  "description": "Vanilla is the simple theme for blogging. And for single column modern websites.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torounit/vanilla.git"
  },
  "author": {
    "name": "Toro_Unit",
    "email": "mail@torounit.com",
    "url": "https://torounit.com"
  },
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/torounit/vanilla/issues"
  },
  "homepage": "https://vanilla.torounit.com",
  "scripts": {
    "docker-run": "docker run --name vanilla -u www-data -v `pwd`:/var/www/wordpress/wp-content/themes/vanilla --shm-size 2048m -p 80:80 -d torounit/wp-theme-test:0.0.1",
    "docker-config": "docker exec vanilla bash -c 'wp theme activate vanilla --path=/var/www/wordpress'",
    "docker-start": "npm run docker-run && sleep 5s && npm run docker-config",
    "docker-stop": "docker kill vanilla && docker rm vanilla",
    "build": "gulp build",
    "backstop": "backstop",
    "test": "backstop test",
    "reference": "backstop reference",
    "gulp": "gulp",
    "start": "gulp",
    "dist": "gulp dist",
    "release": "gulp release -v"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "backstopjs": "^3.1.2",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "browserify-shim": "^3.8.14",
    "css-mqpacker": "^6.0.1",
    "gulp": "^3.9.1",
    "gulp-changed": "^3.1.0",
    "gulp-compile-handlebars": "^0.6.1",
    "gulp-connect-php": "^1.0.1",
    "gulp-debug": "^3.1.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-notify": "^3.0.0",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^7.0.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-stylus": "^2.6.0",
    "gulp-watch": "^4.3.11",
    "gulp-zip": "^4.0.0",
    "minimist": "^1.2.0",
    "node-jq": "^0.7.0",
    "run-sequence": "^2.2.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.9.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "browserify-shim": {
    "jquery": "global:jQuery",
    "underscore": "global:_"
  },
  "dependencies": {
    "normalize.css": "^7.0.0"
  }
}
