{
    "name": "torounit/vanilla",
    "description": "Vanilla is the simple theme for blogging. And for single column modern websites.",
    "type": "wordpress-theme",
    "require-dev": {
        "composer/installers": "^1.0",
        "squizlabs/php_codesniffer": "^2.6",
        "wp-coding-standards/wpcs": "^0.10.0",
        "johnpbloch/wordpress": "^4.7",
        "wpackagist-theme/twentyseventeen": "^1.0",
        "wpackagist-plugin/built-in-server-helper": "^1.0",
        "wpackagist-plugin/theme-check": ">=20160523.1",
        "wpackagist-plugin/wp-multibyte-patch": "^2.8.1",
        "wpackagist-plugin/wordpress-importer": "^0.6.3"
    },
    "license": "GPL-2.0+",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "authors": [
        {
            "name": "Hiroshi Urabe",
            "email": "mail@torounit.com"
        }
    ],
    "require": {
    },
    "extra": {
        "wordpress-install-dir": "server/wordpress",
        "installer-paths": {
            "server/wordpress/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "server/wordpress/wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "post-install-cmd": [
            "@create-local-config",
            "@clone-theme"
        ],
        "post-update-cmd": [
            "@clone-theme"
        ],
        "provision": [
            "@create-salt",
            "@install-wp",
            "@import-theme-unit-test"
        ],
        "create-salt": [
            "if [ ! -e server/salt.php ]; then  echo '<?php ' > server/salt.php && curl https://api.wordpress.org/secret-key/1.1/salt/ >> server/salt.php; fi"
        ],
        "clone-theme": [
            "find . -path './release' -prune -o -path './node_modules' -prune -o -path './dist' -prune -o -path './server' -prune -o -type f -name '*.php' | cpio -pdmu ./server/wordpress/wp-content/themes/vanilla",
            "cp -R ./assets ./server/wordpress/wp-content/themes/vanilla",
            "touch ./server/wordpress/wp-content/themes/vanilla/style.css"
        ],
        "install-wp": [
            "bash ./bin/install-wp.sh"
        ],
        "create-local-config": [
            "bash ./bin/create-local-config.sh"
        ],
        "import-theme-unit-test": [
            "bash ./bin/import-theme-unit-test.sh"
        ],
        "server": [
            "bash ./bin/server.sh"
        ],
        "test": [
            "find . -path './server/wordpress' -prune -o -path './vendor' -prune -o -name '*.php' -exec php -lf {}",
            "@phpcs"
        ],
        "phpcs": [
            "@php vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/",
            "@php vendor/bin/phpcs -p -s -v -n . --standard=./codesniffer.ruleset.xml --extensions=php"
        ]
    }
}
