.primary-menu {

	&__links {
		padding: 0;
		margin: 0;
		border-top: 1px solid rgba(0,0,0,.1);
		> ul {
			margin: 0;
			padding: 0;
		}
		ul,
		li {
			width: 100%;
			padding: 0;
			list-style: none;
		}
		a {
			color: inherit;
			display: block;
			padding: 1em;
			text-decoration: none;
			border-bottom: 1px solid rgba(0,0,0,.1);

		}

		li {

			position: relative;
			.sub-menu,
			.children {
				overflow: hidden;
				transition: height 0.2s ease-out 0s;

				&[aria-expanded="false"] {
					height: 0 !important;
				}

				&[aria-expanded="true"] {
					height: auto;
					overflow visible
				}

				//toggle button
				&::before {
					font-family: "dashicons";
					opacity: 0.6;
					display block
					text-align: center
					line-height: 1.16666666676em;
					width  1.16666666676em;
					height  1.16666666676em;
					text-align: center
					font-size: 1.5em;
					content: "\f148";
					position: absolute;
					top: 0;
					padding: 0.66666666676em;
					right: 0;
					transform: rotateZ(-90deg);
					transition: transform 0.2s ease-out 0s;
					cursor: pointer;
				}

				&[aria-expanded="true"]::before {
					transform: rotateZ(90deg);
				}
			}
		}

		li.current_page_item,
		li:hover {
			a {
			}
		}
	}




}