.entry {
	overflow hidden;
	gutter( padding-top );
	gutter( padding-bottom );

	//box-shadow: 0 1px 1px 0 rgba(128,128,128,0.12), 0 2px 1px -1px rgba(128,128,128,0.2);
	border-bottom 1px solid rgba(128,128,128,0.2);

	&.has-post-thumbnail {
		padding-top: 0
	}

	&__featured-image {
		//background-color: #aaaaaa;
		gutter( margin-bottom, 2 );
	}


	&__body {
		gutter( padding-left );
		gutter( padding-right );
	}

	&__posted-on {
		margin-top: 0;
		margin-bottom: 0
	}

	&__header {
		margin-bottom: 1em;
		gutter( margin-top );
	}

	&__title {
		border none;
		font-size: 2em;
		line-height: 1.6;
		margin: 0;
		padding: 0;

		&::before {
			display: none;
		}
	}

	&__content {
		gutter( margin-bottom );
	}

	&__content-body {
		&::after {
			content: '';
			clear: both;
			display: block;
		}
	}
}
