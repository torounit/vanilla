$app-layout-use-escape = true;

.app-layout {
	background-color: inherit;

	&__header {
		-webkit-overflow-scrolling: touch;
		position: fixed;
		left: 0;
		top: 0;

		&--static {
			position: relative;
		}


		//for WordPress
		.admin-bar & {
			padding-top: 46px;
			position: absolute;

			&--fixed {
				padding-top: 0;
				position: fixed;
			}

			@media $small-up {
				position: fixed;
				padding-top: 46px;
			}
			@media $medium-up {
				position: fixed;
				padding-top: 32px !important;
			}
		}
		z-index: 2;
		pointer-events: visible;
		a,
		button {
			pointer-events: auto;
		}

		width: 100%;


		transition-delay: 0ms;
		transition-duration: .3s;
		transition-timing-function: cubic-bezier(.4, 0, .2, 1);
		transition-property: transform, height;
	}

	.admin-bar &__spacer {
		padding-top: 64px;
	}

	.navbar-transparent & {
		&__spacer {
			padding-top: 0 !important;
		}
	}

	&__content {
		box-sizing: border-box;
		//flex-grow: 1;
		background-color: inherit;
	}

	& &__header {

		if $app-layout-use-escape {
			&--escape {
				transform: translateY(-100%);
			}
		}

	}

}
